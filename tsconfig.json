{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "module": "ES2015",
        "moduleResolution": "Node",
        "target": "ES5",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "outDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}